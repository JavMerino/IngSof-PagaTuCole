<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/CSS/pagos.css">
</head>
<body>
    <main>
        @model pagaTuCole.Models.Apoderado
        <div class="user-info">
            <h3>Información del Apoderado</h3>
            <p><strong>Nombre:</strong> @Model.Nombres @Model.ApPaterno @Model.ApMaterno</p>
            <p><strong>Telefono:</strong> @Model.TeleContacto</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Direccion:</strong> @Model.Direccion</p>
        </div>

        <div class="students-section">
            <h3>Alumnos a Cargo</h3>
            <div class="students-grid">
                @foreach (var alumno in Model.Alumnos)
                {
                    <div class="student-card">
                        <h4>@alumno.Nombres</h4>
                        <p>Grado: @alumno.Grado</p>
                        <p>Nivel: @alumno.Nivel</p>
                        <p>Parentesco: @alumno.Parentesco</p>
                        <div class="payment-status">
                            <h5>Pensiones 2024</h5>
                            <div class="months-grid">
                                <div class="month paid">Ene</div>
                                <div class="month paid">Feb</div>
                                <div class="month pending">Mar</div>
                                <div class="month pending">Abr</div>
                                <div class="month">May</div>
                                <div class="month">Jun</div>
                                <div class="month">Jul</div>
                                <div class="month">Ago</div>
                                <div class="month">Sep</div>
                                <div class="month">Oct</div>
                                <div class="month">Nov</div>
                                <div class="month">Dic</div>
                            </div>
                        </div>
                        <button class="pay-button">Realizar Pago</button>
                    </div>
                }
            </div>
        </div>
        <!-- Modal de Pago -->
        <div id="paymentModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Realizar Pago de Pensiones</h3>
                    <button class="close-modal">&times;</button>
                </div>

                <div class="student-info">
                    <p><strong>Alumno:</strong> <span id="studentName">María Pérez</span></p>
                    <p><strong>Grado:</strong> <span id="studentGrade">3ro Secundaria</span></p>
                </div>

                <h4>Seleccione los meses a pagar:</h4>
                <div class="month-selection">
                    <input type="checkbox" id="month4" class="month-checkbox" data-amount="550">
                    <label for="month4" class="month-label">Abril</label>

                    <input type="checkbox" id="month5" class="month-checkbox" data-amount="550">
                    <label for="month5" class="month-label">Mayo</label>

                    <input type="checkbox" id="month6" class="month-checkbox" data-amount="550">
                    <label for="month6" class="month-label">Junio</label>

                    <input type="checkbox" id="month7" class="month-checkbox" data-amount="550">
                    <label for="month7" class="month-label">Julio</label>
                </div>

                <div class="payment-details">
                    <div class="payment-row">
                        <span>Subtotal:</span>
                        <span id="subtotal">S/. 0.00</span>
                    </div>
                    <div class="payment-row">
                        <span>Mora:</span>
                        <span id="mora">S/. 0.00</span>
                    </div>
                    <div class="payment-row total-row">
                        <span>Total a pagar:</span>
                        <span id="total">S/. 0.00</span>
                    </div>
                </div>

                <div class="payment-methods">
                    <h4>Método de pago:</h4>
                    <label class="payment-method-option">
                        <input type="radio" name="paymentMethod" value="card">
                        Tarjeta de Crédito/Débito
                    </label>
                    <label class="payment-method-option">
                        <input type="radio" name="paymentMethod" value="yape">
                        Yape
                    </label>
                    <label class="payment-method-option">
                        <input type="radio" name="paymentMethod" value="plin">
                        Plin
                    </label>
                </div>

                <div class="action-buttons">
                    <button class="cancel-button">Cancelar</button>
                    <button class="confirm-button">Confirmar Pago</button>
                </div>
            </div>
        </div>


        <div class="additional-payments">
            <h3>Pagos Adicionales</h3>
            <div class="additional-payments-list">
                <div class="payment-item">
                    <div class="payment-detailspa">
                        <span class="concept">Día de la Madre</span>
                        <span class="amount">S/. 50.00</span>
                        <span class="date">Vence: 05/05/2024</span>
                    </div>
                    <button class="pay-additional">Pagar</button>
                </div>

                <div class="payment-item">
                    <div class="payment-detailspa">
                        <span class="concept">Día del Padre</span>
                        <span class="amount">S/. 50.00</span>
                        <span class="date">Vence: 15/06/2024</span>
                    </div>
                    <button class="pay-additional">Pagar</button>
                </div>

                <div class="payment-item paid">
                    <div class="payment-detailspa">
                        <span class="concept">Fiestas Patrias</span>
                        <span class="amount">S/. 50.00</span>
                        <span class="date">Pagado: 20/07/2024</span>
                    </div>
                    <span class="status-paid">Pagado</span>
                </div>
            </div>
        </div>
        <br />
        <h3>Resumen de pagos</h3>
        <div class="summary-card">
            <div class="summary-item">
                <h5>Pensiones Pendientes</h5>
                <p>S/. 550.00</p>
                <span class="detail">1 mes pendientes</span>
            </div>
            <div class="summary-item">
                <h5>Pagos Adicionales</h5>
                <p>S/. 100.00</p>
                <span class="detail">2 pagos pendientes</span>
            </div>
            <div class="summary-item total">
                <h5>Total a Pagar</h5>
                <p>S/. 650.00</p>
            </div>
        </div>
    </main>
    <script src="~/Scripts/payment.js"></script>
</body>
</html>
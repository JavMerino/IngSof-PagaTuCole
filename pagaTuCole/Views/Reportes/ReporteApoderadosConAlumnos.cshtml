@model List<pagaTuCole.Controllers.ReporteApoderados>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reporte de Apoderados</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .action-buttons {
            margin-bottom: 20px;
        }

        .btn-return {
            margin-right: 10px; /* Espacio entre el botón de regresar y el de imprimir */
        }
    </style>
</head>

<body>
    <main>
        <div class="container-fluid mt-5">
            <h2 class="mb-4">Reporte de Apoderados con Cantidad de Alumnos a Cargo</h2>

            <!-- Botones de acción (Regresar e Imprimir) -->
            <div class="text-right action-buttons">
                <!-- Botón para regresar a la vista principal de reportes -->
                <a href="@Url.Action("Reportes", "Reportes")" class="btn btn-secondary btn-return">
                    <i class="fas fa-arrow-left"></i> Regresar
                </a>

                <!-- Botón para imprimir el reporte -->
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fas fa-print"></i> Imprimir Reporte
                </button>
            </div>

            <!-- Tabla de apoderados -->
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Apoderado</th>
                        <th>Cantidad de Alumnos a Cargo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var apoderado in Model)
                    {
                        <tr>
                            <td>@apoderado.NombreApoderado</td>
                            <td>@apoderado.CantidadAlumnos</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </main>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>